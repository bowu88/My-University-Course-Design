<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="City Name"
            style="@style/label_text"
            android:id="@+id/cityName" android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            style="@style/label_text"
            android:id="@+id/size"
            android:layout_alignTop="@+id/downloadIV"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/downloadIV" android:layout_toStartOf="@+id/downloadIV"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_action_download"
               android:layout_centerVertical="true" android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true" android:id="@+id/downloadIV"/>

</RelativeLayout>